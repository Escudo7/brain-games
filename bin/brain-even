#!/usr/bin/env php
<?php
$autoloadPath1 = __DIR__ . '/../vendor/autoload.php';
$autoloadPath2 = __DIR__ . '/../../../autoload.php';
if (file_exists($autoloadPath1)) {
    require $autoloadPath1;
} else {
    require $autoloadPath2;
}

use function BrainGames\Cli\sayGreeting as sayGreeting;
use function BrainGames\Cli\run as run;
use function BrainGames\even\gamesEven as gamesEven;

sayGreeting();
print_r("Answer \"yes\" if number even otherwise answer \"no\".\n");
$name = run('May I have your name?');
print_r("Hello, {$name}!\n");
gamesEven($name);