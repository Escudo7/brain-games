#!/usr/bin/env php
<?php
$autoloadPath1 = __DIR__ . '/../vendor/autoload.php';
$autoloadPath2 = __DIR__ . '/../../../autoload.php';
if (file_exists($autoloadPath1)) {
    require $autoloadPath1;
} else {
    require $autoloadPath2;
}

use function BrainGames\Cli\run as run;
use function BrainGames\games\engine\startGame as startGame;

$nameGame = 'even';
$startMessage = "Answer \"yes\" if number even otherwise answer \"no\".\n";
$nameUser = run($startMessage);
startGame($nameGame, $nameUser);

